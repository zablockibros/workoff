<!DOCTYPE html>
<html ng-app="cojabberApp">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>CoJabber</title>
  <link rel="stylesheet" href="/css/main.css" />
  <script src="/bower_components/underscore/underscore-min.js"></script>
  <script src="/bower_components/async/dist/async.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.2/angular.min.js"></script>
  <script src="/js/app/app.js"></script>
  <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body ng-controller="AppController as app">
  <nav class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <span class="navbar-brand">
          CoJabber<span class="text-muted">@<%= user.domain.name %></span>
          <!--<img alt="Brand" src="...">-->
        </span>
      </div>
      <p class="navbar-text"></p>

      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">justin@<%= user.domain.name %><span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="#" ng-click="app.logout($event)">Logout</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container">
    <div class="row-fluid">
      <!--end sidebar column-->
      <!--start content column-->
      <div class="col-md-8 col-md-offset-2">

        <!--Tabs-->
        <div class="text-center post-options">
          <ul class="nav nav-pills">
            <li ng-class="{ 'active': app.state.showing == 'hot' }"><a href="#" ng-click="app.showPosts('hot', $event)">Hot</a></li>
            <li ng-class="{ 'active': app.state.showing == 'new' }"><a href="#" ng-click="app.showPosts('new', $event)">New</a></li>
            <li ng-class="{ 'active': app.state.showing == 'post' }"><a href="#" ng-click="app.showPoster($event)">Post</a></li>
          </ul>
        </div>

        <!--Posts section-->
        <div class="panel panel-default" ng-if="app.state.showing !== 'post'" ng-cloak>
          <div class="panel-body">
            <div class="media">
              <div class="media-left media-middle voter">
                <i class="fa fa-chevron-up upvote"></i>
                <br />
                <span class="count">66</span>
                <br />
                <i class="fa fa-chevron-down downvote"></i>
              </div>
              <div class="media-body">
                <strong>BurpingButt@domain.com</strong><br />
                Find the fun in this app
              </div>
            </div>
          </div>
        </div>

        <!--Make a post section-->
        <div ng-if="app.state.showing === 'post'" ng-cloak>
          <textarea class="form-control" rows="3" ng-model="app.state.post.text"></textarea>
          <span class="text-muted">{{ app.countPostLength() }} / 400</span>
        </div>

      </div>
      <!--end content column-->
    </div>
  </div>

  <script src="/bower_components/jquery/dist/jquery.min.js"></script>
  <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
